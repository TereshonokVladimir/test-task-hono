{
  "name": "hono-nestjs-nats-kv",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:worker": "npm run dev --workspace=apps/worker",
    "dev:microservice": "npm run start:dev --workspace=apps/microservice",
    "build": "npm run build --workspaces --if-present",
    "build:worker": "npm run build --workspace=apps/worker",
    "build:microservice": "npm run build --workspace=apps/microservice",
    "build:shared": "npm run build --workspace=packages/shared",
    "deploy:worker": "npm run deploy --workspace=apps/worker",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,yml,yaml}\"",
    "validate": "npm run lint && npm run format:check && npm run typecheck && npm run test",
    "nats:start": "docker-compose up -d nats",
    "nats:stop": "docker-compose down",
    "clean": "rm -rf apps/*/dist packages/*/dist node_modules/.cache",
    "prepare": "npm run build:shared",
    "demo:seed": "npx ts-node -P scripts/tsconfig.json scripts/test-nats-flow.ts seed",
    "demo:flow": "npx ts-node -P scripts/tsconfig.json scripts/test-nats-flow.ts demo",
    "task": "npx ts-node -P scripts/tsconfig.json scripts/task-cli.ts",
    "task:create": "npx ts-node -P scripts/tsconfig.json scripts/task-cli.ts create",
    "task:update": "npx ts-node -P scripts/tsconfig.json scripts/task-cli.ts update",
    "task:delete": "npx ts-node -P scripts/tsconfig.json scripts/task-cli.ts delete",
    "task:help": "npx ts-node -P scripts/tsconfig.json scripts/task-cli.ts help",
    "local:task": "bash scripts/local-task-cli.sh",
    "local:create": "bash scripts/local-task-cli.sh create",
    "local:update": "bash scripts/local-task-cli.sh update",
    "local:delete": "bash scripts/local-task-cli.sh delete",
    "local:list": "bash scripts/local-task-cli.sh list"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "nats": "^2.28.0",
    "prettier": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
